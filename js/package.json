{
  "name": "jupyter-jsmol",
  "version": "0.1.0",
  "author": {
    "name": "Adam Fekete",
    "email": "adam@fekete.co.uk"
  },
  "description": "JSmol viewer widget for Jupyter",
  "homepage": "https://github.com/fekad/jupyter-jsmol",
  "repository": {
    "type": "git",
    "url": "https://github.com/fekad/jupyter-jsmol"
  },
  "bugs": {
    "url": "https://github.com/fekad/jupyter-jsmol/issues"
  },
  "license": "BSD-3-Clause",
  "keywords": [
    "jupyter",
    "jupyterlab",
    "jupyterlab-extension",
    "widgets"
  ],
  "files": [
    "lib/**/*.js",
    "dist/*.js",
    "css/*.css"
  ],
  "main": "lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "npm run build:lib && npm run build:nbextension",
    "build:lib": "tsc",
    "build:nbextension": "webpack -p",
    "build:labextension": "npm run clean:labextension && mkdirp ../jupyter_jsmol/labextension && cd ../jupyter_jsmol/labextension && npm pack ../../js",
    "build:all": "npm run build:labextension && npm run build:nbextension",
    "clean": "npm run clean:lib && npm run clean:nbextension",
    "clean:lib": "rimraf lib",
    "clean:nbextension": "rimraf ../jupyter_jsmol/nbextension/static/index.js",
    "clean:labextension": "rimraf ../jupyter_jsmol/labextension",
    "clean:all": "npm run clean:labextension && npm run clean:nbextension && npm run clean:lib",
    "prepack": "npm run build:lib",
    "watch": "npm-run-all -p watch:*",
    "watch:lib": "tsc -w",
    "watch:nbextension": "webpack --watch"
  },
  "dependencies": {
    "@jupyter-widgets/base": "^1.1.10 || ^2 || ^3"
  },
  "devDependencies": {
    "@phosphor/application": "^1.6.0",
    "@phosphor/widgets": "^1.6.0",
    "@types/node": "^10.11.6",
    "@types/webpack-env": "^1.13.6",
    "css-loader": "^3.2.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.0.0",
    "ts-loader": "^5.2.1",
    "typescript": "~3.8",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  },
  "jupyterlab": {
    "extension": "lib/plugin"
  }
}
